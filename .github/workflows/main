name: Build LaTeX Resume and Deploy to GitHub Pages
on: [push]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Compile Resume
        uses: dante-ev/latex-action@latestnp
        with:
          root_file: resume.tex
          compiler: pdflatex
          args: -interaction=nonstopmode -shell-escape

       - name: Commit Resume
         run: |
          mv resume.pdf Maaz_Zaidi_Resume.pdf
          git config --global user.name "maaz-zaidi/resume"
          git config --global user.email "maaz.zaidi2003@gmail.com"
          git add .
          git commit -m 'ðŸ“„ðŸ”¨ Generating Resume' || echo
          git push

      - name: Move PDF to build folder
        run: |
          mkdir -p build
          mv Maaz_Zaidi_Resume.pdf build/Maaz_Zaidi_Resume.pdf

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./build
